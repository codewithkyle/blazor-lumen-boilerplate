@page "/verification/pending"
@inherits PendingEmailVerificationBase;

<div class="block mx-auto w-full max-w-mobile radius-0.5 p-2 bg-white shadow-md border-1 border-solid border-grey-300">
    <p class="block line-normal mb-1.5">Your email address is still pending verification. If you didn't recieve an email
        check your spam folder. If you don't recieve an email
        within 15 minutes please <a target="_blank" href="mailto:codingwithkyle@gmail.com"
            class="font-primary-700">contact support</a>.</p>
    <div class="block text-center">
        <button @onclick="ResendVerificationEmail" class="button -solid -primary -rounded">resend</button>
    </div>
</div>
