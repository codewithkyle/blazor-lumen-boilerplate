{
    "version": "0.0.0",
    "scripts": {
        "reset": "rm -rf ./wwwroot/css && mkdir ./wwwroot/css && rm -rf ./wwwroot/js && mkdir ./wwwroot/js",
        "brixi": "brixi && mv ./brixi/brixi.css ./Stylesheets/brixi.css && rmdir ./brixi",
        "build": "npm run reset && npm run prettier && npm-run-all build:* && mv ./_js/* ./wwwroot/js/ && rmdir ./_js && npm run start",
        "build:css": "cssmonster",
        "build:js": "tsc",
        "build:client": "dotnet build",
        "start": "dotnet run",
        "production": "npm run reset && npm run build:css && npm run build:js && node ./build/minify.js && node ./build/release.js && npm run publish",
        "publish": "dotnet build && dotnet publish -c Release --self-contained && rm -rf ./public && mkdir ./public && mv ./bin/Release/netstandard2.1/publish/* ./public",
        "bundle": "snowpack install",
        "prettier": "prettier --write \"./Scripts/*.ts\" && prettier --write \"./Stylesheets/*.scss\""
    },
    "dependencies": {
        "@codewithkyle/notifyjs": "^2.1.0",
        "brixi": "^0.2.3",
        "cssmonster": "^0.2.1",
        "glob": "^7.1.6",
        "lit-html": "^1.3.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "snowpack": "^2.17.1",
        "terser": "^5.3.8",
        "tooltipper": "^0.1.3",
        "typescript": "^4.0.5"
    },
    "snowpack": {
        "install": [
            "@codewithkyle/notifyjs",
            "lit-html",
            "tooltipper"
        ]
    }
}
